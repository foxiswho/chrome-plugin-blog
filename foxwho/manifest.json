{
    //在chrome中加载时运行
    "name": "博客收藏",
    "manifest_version":2,
    "version": "1.0",
    "description": "博客收藏 配和个人博客使用 【作者：foxwho 邮箱：foxiswho@gmail.com】GitHub:https://github.com/foxiswho/chrome-plugin-blog ",
    "icons": {
        "32": "images/icon.png",
        "16": "images/icon.png"
    },
    
    "background": {
	    "scripts": ["js/jquery.min.js", "js/background.js"]
	},
	"browser_action" : {
		"default_title": "博客收藏",
		"default_popup": "popup.html",
		"default_icon": {
            "72": "images/icon.png"
        }
	},
	"options_page": "settings.html",
	// 可操作页面
//	"content_scripts" : [
//	    {
//	    	"matches": ["*://*/*" ], 		 
//			"js": ["js/jquery.min.js", "js/content.js"]
//		}
//	],
	
	"commands": {
	    "_execute_browser_action": {
	      "suggested_key": {
	        "default": "Ctrl+Shift+F",
	        "mac": "MacCtrl+Shift+F"
	      }
	    }
	},
	
	// 允许的跨域域名
	"permissions": [
	    "*://*/*", 
	    "cookies", "webRequest", "webRequestBlocking",
	    "tabs", "contextMenus"
    ],
    "web_accessible_resources" : ["images/*"]

}